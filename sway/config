# Setup Modes

# Resize Mode
set $resize Use Arrow Keys to Resize the Window
mode "$resize" {
	bindsym Shift+Right resize shrink left 10 px or 10 ppt
	bindsym Shift+Up resize shrink down 10 px or 10 ppt
	bindsym Shift+Down resize shrink up 10 px or 10 ppt
	bindsym Shift+Left resize shrink right 10 px or 10 ppt
	bindsym Left resize grow left 10 px or 10 ppt
	bindsym Down resize grow down 10 px or 10 ppt
	bindsym Up resize grow up 10 px or 10 ppt
	bindsym Right resize grow right 10 px or 10 ppt

	bindsym Escape mode "default"
}


# Exit Functions
set $mode_system System (l) lock, (e) exit, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) Shutdown
mode "$mode_system" {
        #bindsym l exec bash ~/.i3/i3lock.sh, mode "default"

        bindsym l exec --no-startup-id /usr/bin/scrot ~/.config/lock.png -e 'convert $f -blur 2x2 $f && i3lock -i $f'
        # bindsym l exec i3lock-fancy

        bindsym e exec i3-msg exit, mode "default"
	bindsym s exec i3exit suspend, mode "default"
	bindsym h exec i3exit hibernate, mode "default"
	bindsym r exec reboot, mode "default"
	bindsym Shift+s exec poweroff, mode "default"

	bindsym Escape mode "default"
}


